<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/pop_up_auto_pilot">

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Metode Autopilot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Metode Panen Online"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/tv_metode_panen_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/text_panen_online"
            android:textSize="14sp"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Pilihan Tanaman Terbatas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/tv_pilihan_tanman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Pilihan tanaman yang dapat Anda pilih terbatas hanya x tanaman."
            android:textSize="14sp"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Jaminan Jual"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/tv_jaminal_jual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/Black"/>

    </LinearLayout>

</LinearLayout>