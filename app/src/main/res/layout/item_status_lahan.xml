<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="170dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="5.5dp"
    android:layout_marginEnd="5.5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_round_detail_pesanan"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="#FEF9E6"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/img_plant"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/hidroponik_43"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_farm_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Selada Segar Farm"
        android:textColor="@color/colorTextBro"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/img_plant" />

    <TextView
        android:id="@+id/tv_total_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/poppins_regular"
        android:text="2 Tanaman"
        android:textColor="@color/colorTextBroLight"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/tv_farm_name" />

    <TextView
        android:id="@+id/tv_Lahan_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        android:text="Lahan #1"
        android:textColor="#CDBDBD"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/img_plant" />

</androidx.constraintlayout.widget.ConstraintLayout>